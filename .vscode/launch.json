{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug pocotest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/pocotest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "QT_QPA_PLATFORM_PLUGIN_PATH",
                    "value": "/usr/lib/x86_64-linux-gnu/qt5/plugins"
                },
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "/usr/lib/x86_64-linux-gnu:${env:LD_LIBRARY_PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-debug",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            },
            "sourceFileMap": {
                "/proc/self/cwd": "${workspaceFolder}"
            }
        },

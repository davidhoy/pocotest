{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "qmake",
            "args": [
                "CONFIG+=debug",
                "CONFIG-=release",
                "QMAKE_CXXFLAGS_DEBUG+=-g3",
                "QMAKE_CXXFLAGS_DEBUG+=-O0",
                "QMAKE_CXXFLAGS_DEBUG+=-DDEBUG"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "make-debug"
        },
        {
            "label": "make-debug",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOrder": "sequence",
            "dependsOn": "make-build"
        },
        {
            "label": "make-build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j$(nproc)"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
